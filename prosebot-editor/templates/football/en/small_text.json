{
    "entry_point": [
        {
            "text": "{template.score}. {template.teams_form}. {template.best_player}.",
            "condition": ""
        },
        {
            "text": "{template.score}. {template.starters} {template.benched}",
            "condition": ""
        }
    ],
    "score": [
        {
            "text": "{template.pen_score} {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "extra_time==\"PEN\""
        },
        {
            "text": "{template.normal_score} {template.red_card%winner} {template.red_card%loser}",
            "condition": "extra_time!=\"PEN\""
        }
    ],
    "defeated": [
        {
            "text": "beat",
            "condition": "final_score_diff>0"
        },
        {
            "text": "edged past",
            "condition": "final_score_diff>0"
        },
        {
            "text": "defeated",
            "condition": "final_score_diff>0"
        },
        {
            "text": "edged out",
            "condition": "final_score_diff>0"
        },
        {
            "text": "crushed",
            "condition": "final_score_diff>3"
        },
        {
            "text": "prevailed",
            "condition": "final_score_diff>0  || extra_time==\"PEN\""
        },
        {
            "text": "hammered",
            "condition": "final_score_diff>3"
        },
        {
            "text": "eased past",
            "condition": "final_score_diff>3"
        }
    ],
    "draw_adjective": [
        {
            "text": "without goals",
            "condition": "match_goals==0"
        }
    ],
    "match_adjective": [
        {
            "text": "in an exciting win",
            "condition": "match_goals>5 && final_score_diff<2"
        },
        {
            "text": "in an extraordinary win",
            "condition": "match_goals>6 || final_score_diff>4"
        },
        {
            "text": "in a close win",
            "condition": "final_score_diff==1"
        },
        {
            "text": "in an extraordinary turnaround",
            "condition": "has_turn_around"
        },
        {
            "text": "in an entertaining clash",
            "condition": "match_goals>5 && final_score_diff<2"
        },
        {
            "text": "in a hard-fought win",
            "condition": "final_score_diff==1"
        }
    ],
    "goals": [
        {
            "text": "{template.home_team_goals}, while {template.away_team_goals}.",
            "condition": "match_goals!=0 && home_team_goal && away_team_goal"
        },
        {
            "text": "{template.home_team_goals}.",
            "condition": "match_goals!=0 && home_team_goal && !away_team_goal"
        },
        {
            "text": "{template.away_team_goals}.",
            "condition": "match_goals!=0 && !home_team_goal && away_team_goal"
        }
    ],
    "home_team_goals": [
        {
            "text": "{home_team.name} scored by {home_goals}",
            "condition": ""
        }
    ],
    "away_team_goals": [
        {
            "text": "{away_team.name} scored by {away_goals}",
            "condition": ""
        }
    ],
    "red_card": [
        {
            "text": "{#arg.name} finished the game with {#arg.final_players} players.",
            "condition": "#arg.has_red_card"
        },
        {
            "text": "{#arg.name} ended the game with {#arg.final_players} players.",
            "condition": "#arg.has_red_card"
        },
        {
            "text": "{#arg.name} finished the game with {#arg.final_players} men.",
            "condition": "#arg.has_red_card"
        },
        {
            "text": "{#arg.name} ended the game with {#arg.final_players} men.",
            "condition": "#arg.has_red_card"
        }
    ],
    "commentary": [],
    "starters": [
        {
            "text": "Amongst the starting XI {starter_players} were.",
            "condition": "starters"
        }
    ],
    "benched": [
        {
            "text": "{benched_players} did not come off the bench.",
            "condition": "benched"
        }
    ],
    "match_stat_intro": [],
    "match_stat": [],
    "streak": [],
    "home_team_stat": [],
    "away_team_stat": [],
    "team_stat": [],
    "pen_score": [
        {
            "text": "{pen_winner.name} {template.defeated} {pen_loser.name} on {weekday}, winning {pen_score} on penalties after the game had finished {final_score}.",
            "condition": ""
        }
    ],
    "normal_score": [
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.match_adjective} on {weekday}, {final_score}. {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "the game between {winner.name} and {loser.name} on {weekday} ended in a draw, {final_score}. {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "final_score_diff==0"
        },
        {
            "text": "{winner.name} and {loser.name} drew {template.draw_adjective} {final_score} on {weekday}. {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "final_score_diff==0"
        },
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.match_adjective}, {final_score}, on {weekday}. {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.match_adjective} on {weekday}, {final_score}. {template.goals}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.match_adjective}, {final_score}, on {weekday}. {template.goals}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "The match between {winner.name} and {loser.name} on {weekday} ended in a {template.draw_adjective} {final_score} draw. {template.goals}",
            "condition": "final_score_diff==0"
        },
        {
            "text": "{winner.name} and {loser.name} played out a {template.draw_adjective} {final_score} on {weekday}. {template.goals}",
            "condition": "final_score_diff==0"
        },
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.streak%winner} {template.match_adjective} on {weekday}, {final_score}. {template.goals}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "{winner.name} {template.defeated} {loser.name} {template.streak%winner} {template.match_adjective}, {final_score}, on {weekday}. {template.goals}",
            "condition": "final_score_diff>0"
        },
        {
            "text": "{winner.name} and {loser.name} played out a {template.draw_adjective} draw on {weekday}, {final_score}. {template.goals} {template.red_card%winner} {template.red_card%loser}",
            "condition": "final_score_diff==0"
        }
    ]
}